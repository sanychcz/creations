<% provide(:title, "Administration - New user") %>

<section id="user-new-form">
  <h1>Add new user</h1>

  <%= form_for @user do |f| %>

    <% if @user.errors.any? %>
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Create" %>
  <% end %>
</section>