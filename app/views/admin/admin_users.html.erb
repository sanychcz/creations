<% provide(:title, "Administration - Users") %>

<section id="admin-users-container">
  <h1>All users</h1>
  <table>
    <h4><%= link_to "create new user", new_user_path, :class => "create-link" %></h4>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to "delete", user_path(user), method: :delete, data: { confirm: "You sure?" } %></td> 
    </tr>
    <% end %>
  </table>
</section>