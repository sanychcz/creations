<% provide(:title, "Welcome") %>

<%= render partial: "shared/main_top_picture" %>

<section id="teasers">
  <div id="teasers-wrapper">   
    <% @posts.each do |post| %>
      <% post.photos.each do |ph| %>
        <% if ph.onmain? %>
          <div class="wrap">
            <%= image_tag ph.image_url.to_s, :class => "main-image" %>
            <div class="wrap-text">
              <%= link_to post.title, work_post_path(post.work, post), :class => "post-title" %> <%= post.annotation %>
            </div>
          </div>
        <% end %>
      <% end %> 
    <% end %> 
  </div>  
  <div class="clear"></div>
</section>